{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "local>gabe565/renovate-config"
  ],
  "ignorePresets": [
    "github>gabe565/renovate-config:githubActions"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "flux": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "ignorePaths": [
    ".archive/**"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "(^|/)system-upgrade/.*\\.yaml$"
      ],
      "matchStrings": [
        "version: (?<currentValue>.+)"
      ],
      "depNameTemplate": "k3s-io/k3s",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "cni-plugins\\.yaml$"
      ],
      "matchStrings": [
        "version: (?<currentValue>.+)"
      ],
      "depNameTemplate": "containernetworking/plugins",
      "datasourceTemplate": "github-releases"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "\\.yaml$"
      ],
      "matchStrings": [
        "DOCKER_MODS: ['\"]?(?<depName>.+):(?<currentValue>.+)['\"]?",
        "imageName: ['\"]?(?<depName>.+?):(?<currentValue>.+)['\"]?"
      ],
      "datasourceTemplate": "docker"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "\\.yaml$"
      ],
      "matchStrings": [
        "# yaml-language-server: \\$schema=https:\\/\\/raw.githubusercontent.com\\/(?<depName>[^\\/]+/[^\\/]+)\\/(?<currentValue>[^\\/]+)"
      ],
      "datasourceTemplate": "github-tags"
    }
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "helm"
      ],
      "commitMessageTopic": "{{depName}} Helm release"
    },
    {
      "matchDatasources": [
        "github-releases"
      ],
      "matchPackageNames": [
        "k3s-io/k3s"
      ],
      "separateMinorPatch": true
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "Vikunja",
      "matchPackageNames": [
        "vikunja/{/,}**"
      ]
    },
    {
      "groupName": "Immich",
      "matchPackageNames": [
        "ghcr.io/immich-app/{/,}**"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "versioning": "regex:^RELEASE\\.(?<major>\\d+)-(?<minor>\\d+)-(?<patch>\\d+)T.*Z$",
      "matchPackageNames": [
        "/minio/"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/bakito/adguardhome-sync"
      ],
      "versioning": "regex:^(?<compatibility>.+-)?v?(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "sourceUrl": "https://github.com/bakito/adguardhome-sync"
    },
    {
      "matchDatasources": [
        "helm"
      ],
      "extends": [
        "github>gabe565/renovate-config:fullVersion"
      ],
      "matchPackageNames": [
        "/authentik/"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/gurucomputing/headscale-ui"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)(?:-beta-?(?<build>\\d+)?)?$"
    },
    {
      "matchDatasources": [
        "github-tags"
      ],
      "matchPackageNames": [
        "bjw-s/helm-charts"
      ],
      "versioning": "regex:^(?<compatibility>.+)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/cloudnative-pg/postgresql"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+)-(?<build>\\d+)$"
    },
    {
      "matchDatasources": [
        "docker",
        "github-tags"
      ],
      "matchPackageNames": [
        "ghcr.io/fluxcd/flux-manifests",
        "fluxcd/flux2"
      ],
      "groupName": "fluxcd/flux2"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "sourceUrl": "https://github.com/immich-app/immich",
      "matchPackageNames": [
        "ghcr.io/immich-app/{/,}**"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/kube-vip/kube-vip"
      ],
      "sourceUrl": "https://github.com/kube-vip/kube-vip"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/juanfont/headscale"
      ],
      "sourceUrl": "https://github.com/juanfont/headscale"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "goodieshq/headscale-admin"
      ],
      "sourceUrl": "https://github.com/GoodiesHQ/headscale-admin"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/sct/overseerr"
      ],
      "sourceUrl": "https://github.com/sct/overseerr"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/yooooomi/your_spotify_*"
      ],
      "groupName": "yooooomi/your_spotify"
    }
  ]
}
