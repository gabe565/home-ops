<table>
  <tr>
    <th>Namespace</th>
    <th>Name</th>
    <th>Supporting Services</th>
  </tr>
  {{- range $namespace := . }}
  {{- $isFirstRow := true }}
  {{- range .Services }}
  <tr>
    {{- $rowspan := len $namespace.Services }}
    {{- if $isFirstRow }}
    <td rowspan="{{ $rowspan }}">{{ $namespace.Name }}</td>
    {{- end }}
    <td><a href="{{ .Path }}">{{ .Name }}</a></td>
    {{- if $isFirstRow }}
    <td rowspan="{{ $rowspan }}">
      {{- $isFirstService := true }}
      {{- range $k, $supporting := $namespace.Supporting -}}
        {{- if not $isFirstService }}, {{ end }}<a href="{{ .Path }}">{{ .Name }}</a>
        {{- $isFirstService = false }}
      {{- end -}}
    </td>
    {{- end }}
  </tr>
  {{- $isFirstRow = false }}
  {{- end }}
  {{- end }}
</table>
